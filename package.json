{
  "name": "@advanced-rest-client/arc-url",
  "description": "A module with logic an UI regions to support URL processing in Advanced REST Client application. It contains a logic to safely parse url with variables, build a URL input, or to enter any arbitrary URL with autosuggestions.",
  "version": "0.2.2",
  "license": "Apache-2.0",
  "main": "index.js",
  "module": "index.js",
  "keywords": [
    "advanced-rest-client",
    "url",
    "parser"
  ],
  "author": {
    "name": "Pawel Uchida-Psztyc",
    "email": "arc@mulesoft.com"
  },
  "contributors": [
    "Your name can be here!"
  ],
  "repository": {
    "type": "git",
    "url": "git://github.com/advanced-rest-client/url-parser.git"
  },
  "bugs": {
    "url": "https://github.com/advanced-rest-client/url-parser/issues",
    "email": "arc@mulesoft.com"
  },
  "dependencies": {
    "@advanced-rest-client/arc-events": "^0.2.18",
    "@advanced-rest-client/arc-icons": "^3.3.3",
    "@advanced-rest-client/arc-overlay-mixin": "^1.2.0",
    "@advanced-rest-client/arc-resizable-mixin": "^1.2.2",
    "@advanced-rest-client/events-target-mixin": "^3.2.4",
    "@anypoint-web-components/anypoint-autocomplete": "^0.2.12",
    "@anypoint-web-components/anypoint-button": "^1.2.2",
    "@anypoint-web-components/anypoint-collapse": "^0.1.2",
    "@anypoint-web-components/anypoint-dropdown": "^1.1.6",
    "@anypoint-web-components/anypoint-input": "^0.2.27",
    "@anypoint-web-components/anypoint-item": "^1.1.2",
    "@anypoint-web-components/anypoint-listbox": "^1.1.7",
    "@anypoint-web-components/anypoint-switch": "^0.1.10",
    "@anypoint-web-components/validatable-mixin": "^1.1.3",
    "@polymer/iron-form": "^3.0.1",
    "lit-element": "^2.5.1",
    "lit-html": "^1.4.1"
  },
  "devDependencies": {
    "@advanced-rest-client/arc-data-generator": "^4.0.0",
    "@advanced-rest-client/arc-demo-helper": "^3.0.2",
    "@advanced-rest-client/arc-models": "^5.2.3",
    "@open-wc/eslint-config": "^4.3.0",
    "@open-wc/testing": "^2.5.33",
    "@polymer/iron-test-helpers": "^3.0.1",
    "@web/dev-server": "^0.1.21",
    "@web/test-runner": "^0.13.16",
    "@web/test-runner-playwright": "^0.8.7",
    "deepmerge": "^4.2.2",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "husky": "^7.0.1",
    "lint-staged": "^11.1.2",
    "sinon": "^11.1.2",
    "typescript": "^4.3.5"
  },
  "scripts": {
    "start": "web-dev-server --app-index demo/index.html --node-resolve --open --watch --root-dir .",
    "lint:eslint": "eslint --ext .js,.html . --ignore-path .gitignore",
    "format:eslint": "eslint --ext .js,.html . --fix --ignore-path .gitignore",
    "lint:types": "tsc",
    "lint": "npm run lint:eslint",
    "format": "npm run format:eslint",
    "test": "web-test-runner test/**/*.test.js --coverage --node-resolve --playwright --browsers chromium firefox webkit",
    "test:watch": "web-test-runner test/**/*.test.js --node-resolve --watch --playwright --browsers chromium",
    "gen:wc": "wca analyze \"*.js\" --outFile custom-elements.json"
  },
  "eslintConfig": {
    "extends": [
      "@open-wc/eslint-config",
      "eslint-config-prettier"
    ],
    "overrides": [
      {
        "files": [
          "demo/**/*.js",
          "test/**/*.js",
          "**/demo/**/*.html"
        ],
        "rules": {
          "no-console": "off",
          "no-unused-expressions": "off",
          "no-plusplus": "off",
          "no-param-reassing": "off",
          "class-methods-use-this": "off",
          "import/no-extraneous-dependencies": "off"
        }
      }
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix"
    ]
  }
}
